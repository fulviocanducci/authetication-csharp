@model WebAppFullFramework.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="wrapper">
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        <h3 class="page-header form-signin-heading">Login do usuário</h3>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-signin-email", placeholder = "E-mail" } })
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-signin-password", placeholder = "Senha" } })
        <label class="checkbox text-center">
            @Html.EditorFor(model => model.RememberMe) Lembrar?
        </label>
        <div class="row">
            <div class="col-md-6">
                <input type="submit" value="Entrar" class="btn btn-primary btn-block" />
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("RecoverPassword")" class="btn btn-warning btn-block">Recuperar a senha</a>
            </div>
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger div-login-margin" })
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}