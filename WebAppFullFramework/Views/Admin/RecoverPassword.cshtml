@model WebAppFullFramework.Models.ForgotViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="wrapper">
    @using (Html.BeginForm("RecoverPassword", "Admin", FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        <h3 class="page-header form-signin-heading">Recuperar senha</h3>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail" } })
        <div class="row div-login-margin">
            <div class="col-md-6">
                <input type="submit" value="Enviar" class="btn btn-primary btn-block" />
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("Login")" class="btn btn-success btn-block">Voltar ao login</a>
            </div>
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger div-login-margin" })
        if (ViewBag.Status != null && ViewBag.Status)
        {
        <div class="row div-login-margin text-center">
            <div class="col-md-12 alert alert-success">
                Verifique sua caixa de e-mail
            </div>
        </div>
        }
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


