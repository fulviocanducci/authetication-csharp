    <meta name="msapplication-TileImage" content="/Content/ico/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="">Gererenciador</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@if (User != null && User.Identity != null)
                        { @User.Identity.Name } <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <!--<li class="dropdown-header">Operações do Usuário</li>
    <li><a href="/admin/changepassword">Trocar Senha</a></li>
    <li role="separator" class="divider"></li>-->
                            <li class="dropdown-header">
                                Usuário
                            </li>
                            <li role="separator" class="divider"></li>
                            <li>                                
                                <a href="@Url.Action("ChangePassword")">
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 
                                    Alterar a senha
                                </a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li>                                
                                <a href="javascript:;" onclick="event.preventDefault();
                                               document.getElementById('logout-form').submit();">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Sair do Sistema
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LayoutAdminMenu")
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    @Html.Partial("_LayoutAdminMenu")
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                @RenderBody()
            </div>
        </div>
    </div>
    @using(Html.BeginForm("LogOff", "Admin", FormMethod.Post, new { @style="display:none", id= "logout-form", name= "logout-form" }))
    {
        @Html.AntiForgeryToken();
    }
    <script src="/Scripts/js/jquery.min.js"></script>
    <script src="/Scripts/js/bootstrap.min.js"></script>
    <script src="/Scripts/js/validator.js"></script>
    <script src="/Scripts/js/holder.min.js"></script>
    <script src="/Scripts/js/ie10-viewport-bug-workaround.js"></script>
    <script src="/Scripts/js/input-text.js"></script>
    <script src="/Scripts/js/jquery.mask.min.js"></script>
    <script src="/Scripts/js/jquery.mask.fs.js"></script>
    <script src="/Scripts/js/iziToast.js"></script>
    <script src="/Scripts/js/moment-with-locales.min.js"></script>
    <script src="/Scripts/js/bootstrap-datetimepicker.js"></script>
    <script src="/Scripts/js/Chart.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>